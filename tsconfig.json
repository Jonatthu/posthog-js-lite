{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "incremental": true,
    "types": ["jest"],
    "strict": true
  },
  "exclude": ["packages/**/tests/**", "packages/**/dist/**", "node_modules", "dist"],
  "references": [{ "path": "./packages/posthog-core" }]
}
