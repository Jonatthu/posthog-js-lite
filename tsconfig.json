{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "incremental": true,
    "types": ["jest"],
    "strict": true
  },
  "exclude": ["**/dist/**", "node_modules", "dist"],
  "references": [
    {
      "path": "./posthog-core"
    },
    {
      "path": "./posthog-node"
    },
    {
      "path": "./posthog-react-native"
    },
    {
      "path": "./posthog-web"
    }
  ]
}
